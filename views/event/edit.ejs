<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>

<div class="container">
  <div class="row mt-4">
    <div class="col-md-6 offset-md-3">
      <div class="display-4 mb-4">Edit The Event:</div>

      <%- include('../partials/messages.ejs') %>

      <form action="/events/update/1" method="post">
        <input type="hidden" name="id" value="<%= event._id %>">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" value="<%= event.title %>" class="form-control" id="title" placeholder="Enter title">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea rows="4"   name="description" class="form-control" id="description" ><%= event.description %></textarea>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input type="text" value="<%= event.location %>"  name="location" class="form-control" id="location" placeholder="Enter location">
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" name="date" value="<%= eventDate%>"  class="form-control" id="date" placeholder="Enter Date">
        </div>
        <div class="form-group mt-4">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>